<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applicant_myresume_objective"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/background"
    tools:context="com.example.kyler.careersystem.Applicant.ChildFragments.MyresumeAboutFragment">
    <LinearLayout
        android:paddingLeft="@dimen/padding_card"
        android:paddingRight="@dimen/padding_card"
        android:paddingTop="@dimen/margin_card"
        android:paddingBottom="50dp"
        android:orientation="vertical"
        android:background="@drawable/customborder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:minLines="10"
                android:gravity="top"
                android:singleLine="true"
                android:textSize="@dimen/activity_content_medium"
                android:id="@+id/myresume_objective_content"
                android:textColorHint="#727272"
                android:hint="Future Goal"
                android:inputType="textMultiLine"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/padding_card"
        android:layout_marginRight="@dimen/padding_card"
        android:layout_gravity="center"
        android:id="@+id/myresume_objective_save"
        android:text="@string/Save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/MyButton"/>
</RelativeLayout>
