<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kyler.careersystem.FeedbackFragment">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/feedback_scrollview"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="We are willing to receive your feedbacks!"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/feedback_idea"
                    android:elevation="2dp"
                    android:layout_margin="2dp"
                    android:background="@color/White"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:background="@drawable/icon_idea"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:textSize="@dimen/activity_title_medium"
                        android:textColor="@color/Black"
                        android:text="Idea"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/feedback_problem"
                    android:elevation="2dp"
                    android:layout_margin="2dp"
                    android:background="@color/White"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:background="@drawable/icon_problem"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:textSize="@dimen/activity_title_medium"
                        android:textColor="@color/Black"
                        android:text="Problem"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/feedback_question"
                    android:elevation="2dp"
                    android:layout_margin="2dp"
                    android:background="@color/White"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:background="@drawable/icon_question"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:textSize="@dimen/activity_title_medium"
                        android:textColor="@color/Black"
                        android:text="Question"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/feedback_praise"
                    android:elevation="2dp"
                    android:layout_margin="2dp"
                    android:background="@color/White"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <ImageView
                        android:background="@drawable/icon_praise"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>
                    <TextView
                        android:textSize="@dimen/activity_title_medium"
                        android:textColor="@color/Black"
                        android:text="Praise"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/customborder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        android:text="Title"
                        android:textSize="@dimen/activity_title_medium"
                        android:textColor="@color/Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/feedback_title_edittext"
                        android:textSize="@dimen/activity_content_medium"
                        android:textColor="@color/Black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:text="Content"
                    android:textSize="@dimen/activity_title_medium"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/feedback_comment_edittext"
                    android:textSize="@dimen/activity_content_medium"
                    android:textColor="@color/Black"
                    android:gravity="top"
                    android:minLines="10"
                    android:layout_width="match_parent"
                    android:inputType="text|textMultiLine"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    <LinearLayout
        android:id="@+id/feedback_layout_button"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="60dp">
        <Button
            android:textSize="@dimen/activity_title_medium"
            android:text="@string/Submit"
            android:id="@+id/feedback_submit_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp"/>
        <Button
            android:textSize="@dimen/activity_title_medium"
            android:text="@string/CancelAddPost"
            android:id="@+id/feedback_cancel_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="50dp"/>
    </LinearLayout>
</RelativeLayout>
