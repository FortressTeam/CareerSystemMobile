<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/applicant_search_job_result_noresult"
        android:padding="@dimen/padding_card"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/activity_title_big"
            android:textStyle="bold"
            android:textColor="@color/colorContent"
            android:text="Sorry, your search did not match with any jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="@dimen/margin_card"
            android:textSize="@dimen/activity_title_medium"
            android:textColor="@color/Black"
            android:text="Please try again with another key words."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/applicant_search_job_result_tryagain"
            android:layout_margin="@dimen/padding_card"
            android:text="@string/Try"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyButton"/>
    </LinearLayout>
    <com.github.ksoichiro.android.observablescrollview.ObservableListView
        android:scrollbars="none"
        android:id="@+id/applicant_search_job_result_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>