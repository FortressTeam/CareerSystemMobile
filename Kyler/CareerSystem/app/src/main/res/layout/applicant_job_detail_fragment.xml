<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_layout"
    android:layout_marginRight="@dimen/margin_layout"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:background="@color/White"
        android:id="@+id/job_detail_scrollview"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:elevation="2dp"
                android:layout_marginBottom="@dimen/margin_card"
                android:padding="@dimen/padding_card"
                android:background="@drawable/customborder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginRight="@dimen/padding_card"
                        android:id="@+id/job_detail_company_logo"
                        android:layout_gravity="top"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:text="Company: "
                                android:textColor="@color/Black"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/job_detail_company_name"
                                android:text="abc"
                                android:textColor="@color/colorContent"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:text="Address: "
                                android:textColor="@color/Black"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/job_detail_company_address"
                                android:text="abc"
                                android:textColor="@color/colorContent"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:text="Phone: "
                                android:textColor="@color/Black"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/job_detail_hiringmanager_phone"
                                android:text="abc"
                                android:textColor="@color/colorContent"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textStyle="bold"
                                android:text="Size: "
                                android:textColor="@color/Black"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/job_detail_company_size"
                                android:text="abc"
                                android:textColor="@color/colorContent"
                                android:textSize="@dimen/activity_content_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:elevation="2dp"
                android:paddingLeft="@dimen/padding_card"
                android:paddingRight="@dimen/padding_card"
                android:paddingTop="@dimen/padding_card"
                android:paddingBottom="72dp"
                android:background="@drawable/customborder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/job_detail_post_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_title_small"
                        android:textStyle="bold"
                        android:text="abc"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary: "
                        android:textSize="@dimen/activity_title_small"
                        android:textColor="@color/Black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/job_detail_post_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorContent"
                        android:textSize="@dimen/activity_content_medium"
                        android:text="abc"
                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:paddingTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: "
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_title_small"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/job_detail_post_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abc"
                        android:textColor="@color/colorContent"
                        android:textSize="@dimen/activity_content_medium"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time post: "
                        android:textSize="@dimen/activity_title_small"
                        android:textColor="@color/Black"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/job_detail_post_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorContent"
                        android:textSize="@dimen/activity_content_medium"
                        android:text="abc"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/job_detail_post_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorContent"
                    android:textSize="@dimen/activity_content_medium"/>

            </LinearLayout>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/padding_card"
            android:layout_height="match_parent">
            <android.support.design.widget.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/job_detail_floatactionbutton_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:fabSize="mini"
                app:backgroundTint="@color/colorAccent"
                android:src="@drawable/hiringmanagercvsubmitted"/>
            <TextView
                android:background="@drawable/customborder"
                android:visibility="gone"
                android:id="@+id/job_detail_apply_textview"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/activity_content_medium"
                android:textStyle="bold"
                android:text="Apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/padding_card"
            android:layout_height="match_parent">
            <android.support.design.widget.FloatingActionButton
                android:visibility="gone"
                android:id="@+id/job_detail_floatactionbutton_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                app:fabSize="mini"
                app:backgroundTint="@color/colorAccent"
                android:src="@drawable/star"
                />
            <TextView
                android:background="@drawable/customborder"
                android:visibility="gone"
                android:id="@+id/job_detail_favorite_textview"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/activity_content_medium"
                android:textStyle="bold"
                android:text="Follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/job_detail_floatactionbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_card"
            android:layout_marginBottom="@dimen/margin_card"
            app:backgroundTint="@color/colorAccent"
            android:src="@drawable/fabadd"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="@dimen/padding_card"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:id="@+id/job_detail_status"
        android:padding="@dimen/margin_layout"
        android:textSize="@dimen/activity_title_big"
        android:textColor="@color/Black"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
