<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/White"
    android:layout_height="150dp"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/White"
        android:paddingLeft="5dp"
        android:layout_marginTop="27sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:id="@+id/job_listviewitem_image"
            app:civ_border_width="1dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <LinearLayout
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/activity_title_small"
                    android:textColor="@color/Black"
                    android:textStyle="bold|normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary: "/>
                <TextView
                    android:textSize="@dimen/activity_content_small"
                    android:textColor="@color/Black"
                    android:id="@+id/job_listviewitem_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/activity_title_small"
                    android:textColor="@color/Black"
                    android:textStyle="bold|normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company: "/>
                <TextView
                    android:textSize="@dimen/activity_content_small"
                    android:textColor="@color/Black"
                    android:id="@+id/job_listviewitem_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/activity_title_small"
                    android:textColor="@color/Black"
                    android:textStyle="bold|normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Major: "/>
                <TextView
                    android:textSize="@dimen/activity_content_small"
                    android:textColor="@color/Black"
                    android:id="@+id/job_listviewitem_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/activity_title_small"
                android:textColor="@color/Black"
                android:textStyle="bold|normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "/>
            <TextView
                android:textSize="@dimen/activity_content_small"
                android:textColor="@color/Black"
                android:id="@+id/job_listviewitem_description"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="4"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/White"
        android:id="@+id/job_listviewitem_holderview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        <TextView
            android:textColor="@color/Black"
            android:id="@+id/job_listviewitem_title"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:textSize="@dimen/activity_content_big"
            android:text="example"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold|normal"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/job_listviewitem_title_time"
            android:paddingRight="8dp"
            android:layout_weight="0.25"
            android:textColor="#424242"
            android:gravity="right"
            android:textSize="@dimen/activity_title_small"
            android:text="abc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
