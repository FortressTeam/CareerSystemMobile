<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginLeft="@dimen/margin_card"
    android:layout_marginRight="@dimen/margin_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.kyler.careersystem.HiringManager.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/customborder"
                android:elevation="2dp"
                android:padding="@dimen/padding_card"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/margin_layout"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/home_image_company"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/home_company_name"
                        android:textSize="@dimen/activity_title_big"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:text="abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_small"
                            android:text="Size :"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/home_companysize"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorContent"
                            android:textSize="@dimen/activity_content_medium"
                            android:text="abc"
                            android:gravity="bottom"
                            />
                    </LinearLayout>.
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_small"
                            android:text="Address :"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:paddingLeft="5dp"
                            android:id="@+id/home_companyaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorContent"
                            android:textSize="@dimen/activity_content_medium"
                            android:text="abc"
                            android:gravity="bottom"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_small"
                            android:text="Manager :"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:paddingLeft="5dp"
                            android:id="@+id/home_hiringmanagername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorContent"
                            android:textSize="@dimen/activity_content_medium"
                            android:text="abc"
                            android:gravity="bottom"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_small"
                            android:text="Phone :"
                            android:gravity="bottom"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/home_companyphone"
                            android:paddingLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorContent"
                            android:textSize="@dimen/activity_content_medium"
                            android:text="abc"
                            android:gravity="bottom"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/margin_layout"
                android:padding="@dimen/padding_card"
                android:background="@drawable/customborder"
                android:elevation="2dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Company Overview"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_content_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/home_companyabout"
                    android:text="abc"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/activity_content_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/padding_card"
                android:background="@drawable/customborder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
