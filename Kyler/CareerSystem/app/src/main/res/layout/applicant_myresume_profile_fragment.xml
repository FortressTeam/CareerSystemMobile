<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applicant_myresume_profile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/background"
    tools:context=".Applicant.ChildFragments.MyresumeProfileFragment">

    <LinearLayout
        android:paddingLeft="@dimen/padding_card"
        android:paddingRight="@dimen/padding_card"
        android:paddingTop="@dimen/margin_card"
        android:paddingBottom="50dp"
        android:background="@drawable/customborder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:textSize="@dimen/activity_content_medium"
                android:id="@+id/myresume_profile_name"
                android:textColorHint="#727272"
                android:hint="Name"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:id="@+id/myresume_profile_rbmale"
                android:text="Male"
                android:textSize="@dimen/activity_content_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/myresume_profile_rbfemale"
                android:text="Female"
                android:textSize="@dimen/activity_content_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:textSize="@dimen/activity_content_medium"
                android:id="@+id/myresume_profile_hometown"
                android:textColorHint="#727272"
                android:hint="Hometown"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                android:enabled="false"
                android:textColor="@drawable/colorstyleedittext"
                android:singleLine="true"
                android:textSize="@dimen/activity_content_medium"
                android:id="@+id/myresume_profile_birthday"
                android:textColorHint="@color/colorAccent"
                android:hint="Birthday"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
            <ImageView
                android:id="@+id/myresume_profile_birthday_imageview"
                android:layout_gravity="center"
                android:src="@drawable/calendaricon"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/myresume_profile_save"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/padding_card"
        android:layout_marginRight="@dimen/padding_card"
        android:layout_gravity="center"
        android:text="@string/Save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/MyButton"/>
</RelativeLayout>
