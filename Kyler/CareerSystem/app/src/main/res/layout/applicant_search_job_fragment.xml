<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_card"
        android:theme="@style/EditTextLoginApplicant">

        <EditText
            android:hint="I'm looking for "
            android:id="@+id/applicant_search_job_edittext"
            android:textSize="@dimen/activity_title_medium"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/padding_card"
            android:layout_marginLeft="@dimen/padding_card"
            android:text="WHAT"
            android:textSize="@dimen/activity_title_medium"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_layout"
            android:layout_marginLeft="@dimen/padding_card"
            android:layout_marginRight="@dimen/padding_card"
            android:layout_marginBottom="@dimen/padding_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:background="@drawable/spinner_background"
                android:id="@+id/applicant_search_job_spinner_major"
                android:layout_width="match_parent"
                android:padding="@dimen/margin_card"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_layout"
                android:src="@drawable/dropdownicon"/>
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="@dimen/padding_card"
            android:layout_marginRight="@dimen/padding_card"
            android:text="WHERE"
            android:textSize="@dimen/activity_title_medium"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_layout"
            android:layout_marginLeft="@dimen/padding_card"
            android:layout_marginRight="@dimen/padding_card"
            android:layout_marginBottom="@dimen/padding_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:background="@drawable/spinner_background"
                android:id="@+id/applicant_search_job_spinner_location"
                android:padding="@dimen/margin_card"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_layout"
                android:src="@drawable/dropdownicon"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_card"
            android:layout_marginRight="@dimen/padding_card"
            android:id="@+id/applicant_search_job_button"
            android:text="@string/Search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:theme="@style/MyButton"/>
    </LinearLayout>
</LinearLayout>
