<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.kyler.careersystem.Applicant.ChildFragments.MyresumeEducationFragment">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:singleLine="true"
            android:textSize="@dimen/activity_content_medium"
            android:id="@+id/myresume_education_university"
            android:textColorHint="#727272"
            android:hint="University"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:text="Degree"
            android:textStyle="bold"
            android:textSize="@dimen/activity_content_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Spinner
        android:layout_marginLeft="10dp"
        android:scrollbars="none"
        android:id="@+id/myresume_education_degree_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:singleLine="true"
            android:textSize="@dimen/activity_content_medium"
            android:id="@+id/myresume_education_major"
            android:textColorHint="#727272"
            android:hint="Major"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/myresume_education_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/myresume_education_start_textview"
            android:textColor="@color/hint"
            android:textSize="@dimen/activity_content_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/myresume_education_end_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/myresume_education_end_textview"
            android:textColor="@color/hint"
            android:textSize="@dimen/activity_content_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/myresume_education_save"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="@string/Save"
        android:layout_height="wrap_content"/>
</LinearLayout>
