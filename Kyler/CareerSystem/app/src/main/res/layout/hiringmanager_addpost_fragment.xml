<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="@dimen/margin_layout"
    android:id="@+id/hiringmanager_addpost_layout"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HiringManager.ChildFragments.AddPostFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/customborder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:paddingBottom="50dp"
        android:background="@drawable/customborder"
        android:id="@+id/hiringmanager_addpost_scrollview"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="@dimen/padding_card"
            android:layout_marginTop="@dimen/margin_card"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingLeft="5dp"
                android:background="@drawable/customborder"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/hiringmanager_addpost_title_icon"
                    android:background="@drawable/icon_title"
                    android:layout_width="25dp"
                    android:layout_marginTop="@dimen/activity_content_medium"
                    android:layout_height="25dp"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="@dimen/activity_content_medium"
                        android:singleLine="true"
                        android:id="@+id/hiringmanager_addpost_title_edittext"
                        android:layout_marginLeft="5dp"
                        android:textColorHint="#727272"
                        android:hint="Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <ImageView
                            android:id="@+id/hiringmanager_addpost_salary_icon"
                            android:background="@drawable/icon_money"
                            android:layout_width="25dp"
                            android:layout_marginTop="@dimen/activity_content_medium"
                            android:layout_height="25dp"
                            />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:inputType="number"
                                android:textColorHighlight="@color/White"
                                android:textSize="@dimen/activity_content_medium"
                                android:singleLine="true"
                                android:id="@+id/hiringmanager_addpost_salary_edittext"
                                android:layout_marginLeft="5dp"
                                android:hint="Salary"
                                android:textColorHint="#727272"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/hiringmanager_addpost_category_icon"
                        android:background="@drawable/icon_category"
                        android:layout_width="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="25dp"
                        />
                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:scrollbars="none"
                        android:id="@+id/hiringmanager_addpost_category_spinner"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/hiringmanager_addpost_location_icon"
                        android:background="@drawable/icon_location"
                        android:layout_width="25dp"
                        android:layout_marginTop="@dimen/activity_content_medium"
                        android:layout_height="25dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:textSize="@dimen/activity_content_medium"
                            android:singleLine="true"
                            android:id="@+id/hiringmanager_addpost_location_edittext"
                            android:layout_marginLeft="5dp"
                            android:hint="Location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="@dimen/activity_content_medium"
                        android:id="@+id/hiringmanager_addpost_content_icon"
                        android:background="@drawable/icon_content"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                    android:textSize="@dimen/activity_content_medium"
                    android:id="@+id/hiringmanager_addpost_content_edittext"
                    android:gravity="top"
                    android:hint="Content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text|textMultiLine"
                    android:minHeight="250dp"
                    />
                </android.support.design.widget.TextInputLayout>
                </LinearLayout>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    </LinearLayout>
    <Button
        android:layout_marginLeft="@dimen/padding_card"
        android:layout_marginRight="@dimen/padding_card"
        android:layout_alignParentBottom="true"
        android:theme="@style/MyButton"
        android:textSize="@dimen/activity_title_medium"
        android:id="@+id/hiringmanager_addpost_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</RelativeLayout>
