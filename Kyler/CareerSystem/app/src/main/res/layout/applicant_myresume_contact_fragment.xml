<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applicant_myresume_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Applicant.ChildFragments.MyresumeContactFragment">
    <LinearLayout
        android:paddingLeft="@dimen/padding_card"
        android:paddingRight="@dimen/padding_card"
        android:paddingTop="@dimen/margin_card"
        android:paddingBottom="50dp"
        android:background="@drawable/customborder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/activity_content_medium"
                android:id="@+id/myresume_contact_phone"
                android:textColorHint="#727272"
                android:hint="Phone"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:textSize="@dimen/activity_content_medium"
                android:id="@+id/myresume_contact_email"
                android:textColorHint="#727272"
                android:hint="Email"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:textSize="@dimen/activity_content_medium"
                android:id="@+id/myresume_contact_Address"
                android:textColorHint="#727272"
                android:hint="Address"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/padding_card"
        android:layout_marginRight="@dimen/padding_card"
        android:id="@+id/myresume_contact_save"
        android:layout_gravity="center"
        android:text="@string/Save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/MyButton"/>
</RelativeLayout>
