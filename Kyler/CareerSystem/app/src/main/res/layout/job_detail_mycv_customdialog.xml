<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:weightSum="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/job_detail_mycvdialog_alert"
        android:visibility="visible"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/activity_title_medium"
        android:text="You didn't create any CV yet.\nPlease go to our CareerSystem website to create one.\nOr tap here to synchronize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/job_detail_mycvdialog_listview"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="250dp">
    </ListView>

    <Button
        android:id="@+id/job_detail_mycvdialog_cancel"
        android:layout_marginTop="10dp"
        android:text="@string/Cancel"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
