<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kyler.careersystem.Applicant.ChildFragments.CompanyInformationFragment">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/company_information_scrollview"
        android:scrollbars="none"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_layout"
        android:layout_marginRight="@dimen/margin_layout"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:elevation="2dp"
                android:padding="@dimen/padding_card"
                android:background="@drawable/customborder"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/company_information_image"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_title_medium"
                        android:text="Company :"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/company_information_companyname"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_content_big"
                        android:text="abc"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_title_small"
                        android:text="Size :"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/company_information_companysize"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorContent"
                        android:textSize="@dimen/activity_content_medium"
                        android:text="abc"
                        android:gravity="bottom"
                        />
                </LinearLayout>.
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_title_small"
                        android:text="Address :"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/company_information_companyaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorContent"
                        android:textSize="@dimen/activity_content_medium"
                        android:text="abc"
                        android:gravity="bottom"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_title_small"
                        android:text="Manager :"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:paddingLeft="5dp"
                        android:id="@+id/company_information_hiringmanagername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorContent"
                        android:textSize="@dimen/activity_content_medium"
                        android:text="abc"
                        android:gravity="bottom"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_title_small"
                        android:text="Phone :"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/company_information_companyphone"
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorContent"
                        android:textSize="@dimen/activity_content_medium"
                        android:text="abc"
                        android:gravity="bottom"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:elevation="2dp"
                android:paddingLeft="@dimen/padding_card"
                android:paddingRight="@dimen/padding_card"
                android:paddingTop="@dimen/padding_card"
                android:paddingBottom="60dp"
                android:orientation="vertical"
                android:background="@drawable/customborder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_content_big"
                    android:text="Company Overview:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/company_information_companyabout"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorContent"
                    android:textSize="@dimen/activity_content_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    <LinearLayout
        android:id="@+id/company_information_subscribe_layout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:visibility="visible"
            android:id="@+id/company_information_subscribe"
            android:text="@string/Subscribe"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:theme="@style/MyButton"/>
    </LinearLayout>
</RelativeLayout>
