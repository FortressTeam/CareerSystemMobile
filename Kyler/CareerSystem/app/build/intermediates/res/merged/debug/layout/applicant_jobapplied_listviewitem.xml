<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:paddingTop="@dimen/margin_layout"
              android:paddingBottom="@dimen/padding_card"
              android:paddingLeft="@dimen/padding_card"
              android:paddingRight="@dimen/padding_card"
              android:background="@drawable/customborder"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/job_applied_header"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/job_applied_listviewitem_posttitle"
            android:layout_gravity="center_vertical"
            android:textColor="@color/Black"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/activity_content_big"
            android:text="example"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold|normal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@drawable/customborderrejected"
            android:textStyle="bold"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:id="@+id/job_applied_listviewitem_status"
            android:text="abc"
            android:textSize="@dimen/activity_content_medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/job_applied_companyicon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/job_applied_listviewitem_content"
                android:text="abc"
                android:paddingLeft="3dp"
                android:textColor="@color/Black"
                android:textSize="@dimen/activity_content_small"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Black"
                    android:text="Company :"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_content_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/job_applied_listviewitem_companyname"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/activity_content_medium"
                    android:text="abc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/White"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:text="Location :"
                        android:textStyle="bold"
                        android:textSize="@dimen/activity_content_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/job_applied_listviewitem_location"
                        android:text="abc"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_content_small"
                        android:maxLines="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:text="Salary :"
                        android:textStyle="bold"
                        android:textSize="@dimen/activity_content_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/job_applied_listviewitem_salary"
                        android:text="abc"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_content_small"
                        android:maxLines="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
