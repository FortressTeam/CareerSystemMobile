<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/job_applied_header"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:id="@+id/job_applied_listviewitem_companyname"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:text="abc"
            android:textSize="@dimen/activity_title_big"/>
        <TextView
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="5dp"
            android:textColor="@color/Black"
            android:id="@+id/job_applied_listviewitem_status"
            android:text="abc"
            android:textSize="@dimen/activity_title_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:background="@color/White"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/job_applied_companyicon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/job_applied_listviewitem_posttitle"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:textSize="@dimen/activity_content_medium"
                android:text="abc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/job_applied_listviewitem_content"
                android:text="abc"
                android:paddingLeft="3dp"
                android:textColor="@color/Black"
                android:textSize="@dimen/activity_content_small"
                android:maxLines="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/White"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:text="Address :"
                        android:textStyle="bold"
                        android:textSize="@dimen/activity_title_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/job_applied_listviewitem_address"
                        android:text="abc"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_content_medium"
                        android:maxLines="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:text="Salary :"
                        android:textStyle="bold"
                        android:textSize="@dimen/activity_title_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/job_applied_listviewitem_salary"
                        android:text="abc"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_content_medium"
                        android:maxLines="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/jobapplied_delete"
                android:background="@drawable/deleteicon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
