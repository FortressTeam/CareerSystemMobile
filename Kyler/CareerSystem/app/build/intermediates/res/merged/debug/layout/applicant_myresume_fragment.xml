<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:paddingLeft="@dimen/margin_card"
                  android:paddingRight="@dimen/margin_card"
                  android:layout_height="match_parent">
        <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
            android:scrollbars="none"
            android:id="@+id/myresume_fragment_observablescrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:id="@+id/myresume_editprofile"
                    android:elevation="2dp"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:background="@drawable/customborder"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/myresume_user_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"/>
                    <LinearLayout
                        android:paddingLeft="@dimen/padding_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sex: "
                                android:textColor="@color/Black"
                                android:textSize="@dimen/activity_title_small"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/myresume_sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="abc"
                                android:textSize="@dimen/activity_content_medium"
                                android:textColor="@color/colorContent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="3dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hometown: "
                                android:textColor="@color/Black"
                                android:textSize="@dimen/activity_title_small"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/myresume_hometown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="abc"
                                android:textSize="@dimen/activity_content_medium"
                                android:textColor="@color/colorContent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="3dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Birthday: "
                                android:textColor="@color/Black"
                                android:textSize="@dimen/activity_title_small"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/myresume_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="abc"
                                android:textSize="@dimen/activity_content_medium"
                                android:textColor="@color/colorContent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:background="@drawable/customborder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumecontacticon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="Contact"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_editcontact"
                            android:background="@drawable/editicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow>
                            <TextView
                                android:text="Phone "
                                android:textSize="@dimen/activity_title_small"
                                android:textColor="@color/Black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/myresume_phone"
                                android:paddingLeft="10dp"
                                android:text="abc "
                                android:textSize="@dimen/activity_content_medium"
                                android:textColor="@color/colorContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Email "
                                android:textSize="@dimen/activity_title_small"
                                android:textColor="@color/Black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/myresume_email"
                                android:paddingLeft="10dp"
                                android:text="abc "
                                android:textSize="@dimen/activity_content_medium"
                                android:textColor="@color/colorContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:text="Address "
                                android:textSize="@dimen/activity_title_small"
                                android:textColor="@color/Black"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/myresume_address"
                                android:paddingLeft="10dp"
                                android:paddingRight="70dp"
                                android:text="abc "
                                android:textSize="@dimen/activity_content_medium"
                                android:textColor="@color/colorContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:elevation="2dp"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumeabouticon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="About"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_editabout"
                            android:background="@drawable/editicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="55dp"
                            android:id="@+id/myresume_about"
                            android:text="Write something about you."
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:elevation="2dp"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumeobjectiveicon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="Objective"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_editobjective"
                            android:background="@drawable/editicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="30dp"
                            android:id="@+id/myresume_objective"
                            android:text="Don't have information."
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:elevation="2dp"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumeeducationicon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="Education"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_addeducation"
                            android:background="@drawable/addicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="55dp"
                            android:id="@+id/myresume_education"
                            android:text="Where did you study at?"
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.example.kyler.careersystem.Applicant.Customize.NonScrollListView
                        android:id="@+id/myresume_listview_education"
                        android:cacheColorHint="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.example.kyler.careersystem.Applicant.Customize.NonScrollListView>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:elevation="2dp"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumeexperienceicon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:paddingLeft="@dimen/padding_image_text"
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:text="Experience"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_addexperience"
                            android:background="@drawable/addicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="30dp"
                            android:id="@+id/myresume_experience"
                            android:text="Don't have information."
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.example.kyler.careersystem.Applicant.Customize.NonScrollListView
                        android:id="@+id/myresume_listview_experience"
                        android:cacheColorHint="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.example.kyler.careersystem.Applicant.Customize.NonScrollListView>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:elevation="2dp"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumeactivityicon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="Activities"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_addactivity"
                            android:background="@drawable/addicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="30dp"
                            android:id="@+id/myresume_activity"
                            android:text="Don't have information."
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.example.kyler.careersystem.Applicant.Customize.NonScrollListView
                        android:id="@+id/myresume_listview_activity"
                        android:cacheColorHint="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.example.kyler.careersystem.Applicant.Customize.NonScrollListView>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:elevation="2dp"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumeawardicon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="Awards"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_addaward"
                            android:background="@drawable/addicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="30dp"
                            android:id="@+id/myresume_award"
                            android:text="Don't have information."
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.example.kyler.careersystem.Applicant.Customize.NonScrollListView
                        android:id="@+id/myresume_listview_award"
                        android:cacheColorHint="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.example.kyler.careersystem.Applicant.Customize.NonScrollListView>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:elevation="2dp"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumeskillicon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="Skills"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_addskill"
                            android:background="@drawable/addicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="30dp"
                            android:id="@+id/myresume_skill"
                            android:text="Don't have information."
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.example.kyler.careersystem.Applicant.Customize.NonScrollListView
                        android:id="@+id/myresume_listview_skill"
                        android:dividerHeight="0dp"
                        android:divider="@color/White"
                        android:cacheColorHint="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.example.kyler.careersystem.Applicant.Customize.NonScrollListView>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/padding_card"
                    android:layout_marginBottom="@dimen/margin_card"
                    android:elevation="2dp"
                    android:background="@drawable/customborder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:weightSum="1"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:background="@drawable/resumehobbieicon"
                            android:layout_height="25dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/activity_title_medium"
                            android:paddingLeft="@dimen/padding_image_text"
                            android:text="Hobbies"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/myresume_addhobbie"
                            android:background="@drawable/addicon"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:minHeight="30dp"
                            android:id="@+id/myresume_hobbie"
                            android:text="Don't have information."
                            android:textSize="@dimen/activity_content_medium"
                            android:textColor="@color/colorContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <com.example.kyler.careersystem.Applicant.Customize.NonScrollListView
                        android:id="@+id/myresume_listview_hobbie"
                        android:dividerHeight="0dp"
                        android:divider="@color/White"
                        android:cacheColorHint="@android:color/transparent"
                        android:listSelector="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </com.example.kyler.careersystem.Applicant.Customize.NonScrollListView>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/myresume_hiringmanger_follow_linearlayout"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <Button
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:visibility="visible"
                        android:id="@+id/myresume_hiringmanager_follow"
                        android:text="@string/Follow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <Button
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:visibility="gone"
                        android:id="@+id/myresume_hiringmanager_unfollow"
                        android:text="@string/Unfollow"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:theme="@style/MyButton"/>
                </LinearLayout>
            </LinearLayout>
        </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_margin="15dp"
        android:src="@drawable/editicon2"
        app:backgroundTint="@color/floatbutton"
        android:id="@+id/myresume_editbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>