<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HiringManager.AddPostFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:layout_marginLeft="5dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:id="@+id/hiringmanager_addpost_scrollview"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingLeft="5dp"
                android:background="@drawable/customborder"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/icon_title"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:text="Title *"
                    android:textSize="@dimen/activity_title_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textSize="@dimen/activity_content_medium"
                    android:id="@+id/hiringmanager_addpost_title_edittext"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/background"/>

            <LinearLayout
                android:paddingLeft="5dp"
                android:background="@drawable/customborder"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:weightSum="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <ImageView
                        android:background="@drawable/icon_money"
                        android:layout_width="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="20dp"
                        />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:text="Salary *"
                    android:textSize="@dimen/activity_title_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textSize="@dimen/activity_content_medium"
                    android:id="@+id/hiringmanager_addpost_salary_edittext"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow>
                    <Space/>
                    <Space/>
                    <CheckBox
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/activity_content_medium"
                        android:id="@+id/hiringmanager_addpost_salary_checkbox"
                        android:text="Negotiable"
                        />
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/icon_location"
                    android:layout_width="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/activity_title_small"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:text="Location *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textSize="@dimen/activity_content_medium"
                    android:id="@+id/hiringmanager_addpost_location_edittext"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </LinearLayout>
            <TextView
                android:background="@color/background"
                android:layout_width="match_parent"
                android:layout_height="3dp"/>
            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical"
                android:background="@drawable/customborder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Job Overview *"
                    android:textSize="@dimen/activity_title_medium"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:background="@drawable/customline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/icon_category"
                        android:layout_width="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="20dp"
                        />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text="Category "
                        android:textSize="@dimen/activity_title_small"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:scrollbars="none"
                        android:id="@+id/hiringmanager_addpost_category_spinner"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>
                <TextView
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_title_small"
                    android:text="Content *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:textSize="@dimen/activity_content_medium"
                    android:id="@+id/hiringmanager_addpost_postcontent_edittext"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textMultiLine"
                    android:minHeight="350dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
    <LinearLayout
        android:id="@+id/hiringmanager_addpost_layoutbutton"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:textSize="@dimen/activity_title_medium"
            android:text="@string/AddPost"
            android:id="@+id/hiringmanager_addpost_add"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>
        <Button
            android:textSize="@dimen/activity_title_medium"
            android:text="@string/CancelAddPost"
            android:id="@+id/hiringmanager_addpost_cancel"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>
